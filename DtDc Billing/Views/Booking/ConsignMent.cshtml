@model DtDc_Billing.Metadata_Classes.TransactionMetadata


@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    label {
        display: inline-block;
        width: 100% !important;
        margin-right: 0.5em;
        padding-top: 1.5em;
    }

    .choosefile {
        padding: 7px !important;
    }
</style>

<div class="content-wrapper">
    <div class="box box-info" style="padding:16px 16px">

        @{

            var succeessdata = TempData["Upload"] as string;
            var success = TempData["success"] as string;
        }
        @if (!string.IsNullOrEmpty(succeessdata))
        {
            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", succeessdata))
        }
        @if (!string.IsNullOrEmpty(success))
        {
            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", success))
        }
        @using (Html.BeginForm("importTextFile", "Booking", FormMethod.Post, new { enctype = "multipart/form-data", id = "importtext" }))
        {

            @Html.AntiForgeryToken()


            <div class="box-header with-border">
                <div class="row">
                    <div class="col-md-6">

                        <h4>
                            Book Consignment
                            <a href="https://www.youtube.com/watch?v=dxswR3vLNtw&list=PLT-Gd9X3Y1afr1FZRb8Z8ELFncnWwOhzz&index=15"
                               target="_blank"
                               data-toggle="tooltip"
                               title="Click to view more info">
                                <i class="fa fa-info-circle" style="font-size:25px;"></i>
                            </a>
                        </h4>
                    </div>


                    <div class="col-md-6">
                        <div class="col-sm-8">
                            <input id="File1" required type="file" name="ImportText" class="choosefile" />
                            <span class="fileError" style="color: red; display: none;">Please select a file before uploading.</span> <!-- Error message -->

                        </div>
                        <div class="col-sm-4">
                            <input type="submit" class="btn btn-primary pull-right btn-submitt" id="textsubmitBtn" value="Import From text" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <input type="text" id="intpincode" class="form-control" style="display:none" placeholder="International City" />
                    </div>
                </div>

            </div>

        }
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">


                    <div class="form-horizontal">

                        <div id="form-Cons">
                            @Html.Partial("ConsignmentPartial", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<script>
    $(document).ready(function () {
        $('#textsubmitBtn').on('click', function (e) {
            var fileInput = $('#File1');
            var filePath = fileInput.val();
            var allowedExtensions = /(\.txt)$/i; // Regex to allow only .txt files

            // Check if the file is selected
            if (!filePath) {
                $(".fileError").show();
                return false;
            }

            // Validate the file extension
            if (!allowedExtensions.exec(filePath)) {
                $(".fileError").text("Invalid file type. Please upload a DTDC  .txt file.");
            
                fileInput.val(''); // Clear the file input
                return false;
            }

            // If validation passes, submit the form
            $(this).closest('importtext').submit();
        });
    });
</script>
