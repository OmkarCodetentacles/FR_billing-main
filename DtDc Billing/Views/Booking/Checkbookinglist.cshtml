<script>

    function showAlert(message, isSuccess = true) {
        const $alertContainer = $("#alertContainer");

        // Set the message
        $alertContainer.text(message);

        // Update styles based on success or error
        if (isSuccess) {
            $alertContainer.css({ "background-color": "green", "color": "black" });
        } else {
            $alertContainer.css({ "background-color": "red", "color": "black" });
        }

        // Show the div
        $alertContainer.show();

        // Hide the div automatically after 10 seconds
        setTimeout(function () {
            $alertContainer.fadeOut();
        }, 6000); // 10 seconds
    }
    function DeleteConsignment(consignmentno) {
        // Get the consignment number from the input field or some other source
        const consignmentNo = consignmentno;
        var customerId = $('#custid').val();
        var fromDate = $('#datepicker').val();
        var toDate = $('#datepicker1').val();
        if (!consignmentNo) {
            alert("Please provide a consignment number.");
            return;
        }

        // Confirm deletion
        if (!confirm(`Are you sure you want to delete consignment number ${consignmentNo}?`)) {
            return false;
        }

        // Prepare the data
        const data = {
            Consignment_No: consignmentNo,
            FromDate: fromDate,
            ToDate: toDate,
            CustomerId: customerId
        };

        // Perform AJAX request
        $.ajax({
            url: '/Booking/DeleteCons', // Replace with your controller's actual name
            type: 'POST',
            data: data,
            success: function (response) {
                showAlert(response, true);
                setTimeout(function () {
                  
                    location.reload();
                }, 10000); // 6 seconds = 6000 milliseconds
               
            },
            error: function (xhr, status, error) {
              
                //$('#alertContainer').text('Something went wrong while deleting the consignment. Please try again').css('background-color', 'red'); // Set red background for errors;
