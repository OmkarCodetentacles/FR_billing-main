                //$('#alertContainer').fadeOut('slow', function () {
                //    $(this).html('').show(); // Clear and reset the container
                //});
                setTimeout(function () {
                   
                }, 10000); // 6 seconds = 6000 milliseconds

                // alert("Something went wrong while deleting the consignment. Please try again.");
            }
        });
    }
