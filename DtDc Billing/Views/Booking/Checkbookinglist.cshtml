    $(function () {
        var company_name = [];
        var company_idarr = [];

        // Fetch data using AJAX
        $.ajax({
            type: 'GET',
            url: '/Booking/CustomerIdAutocomplete',
            dataType: 'json',
            success: function (data) {
                $.each(data, function (i, item) {
                    company_name.push({
                        label: item.Company_Name, // Display this in the autocomplete dropdown
                        value: item.Company_Id   // Store this as the actual value
                    });
                    company_idarr.push(item.Company_Id); // Store company IDs in an array if needed
                });

                var pfcode = '@ViewBag.PfCode';
                if (pfcode == "CF2024") {
                    // Initialize the autocomplete and customize how the items are rendered in the dropdown
                    $("#custid").autocomplete({
                        source: company_name, // Use company_name as the source for autocomplete
                        select: function (event, ui) {
                            // When an item is selected, update the input value with the selected item's value
                            $("#custid").val(ui.item.value);
                            $("#custid").trigger("focusout");
                            return false; // Prevent the default behavior of updating the input with the label
                        }
                    }).autocomplete("instance")._renderItem = function (ul, item) {
                        return $("<li>")
                            .append("<div>" + item.value + " (" + item.label + ")</div>")
                            .appendTo(ul);
                    };
                } else {
                    // Initialize the autocomplete with the default settings
                    $("#custid").autocomplete({
                        source: company_idarr, // Use company_idarr as the source for autocomplete
                        select: function (event, ui) {
                            // When an item is selected, update the input value with the selected item's value
                            $("#custid").val(ui.item.value);
                            $("#custid").trigger("focusout");
                            return false; // Prevent the default behavior of updating the input with the label
                        }
                    });
                }
            }
        });
    });
