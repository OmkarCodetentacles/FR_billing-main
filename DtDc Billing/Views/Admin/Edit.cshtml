<script type="text/javascript">
    function scrollToTop() {
        window.scrollTo(0, 0);
    }


    function onBegin() {
        scrollToTop();
        // Show the loader
        document.getElementById('overlayBlock').style.display = 'block';
    }

    function onComplete() {
        // Hide the loader
        scrollToTop();
        document.getElementById('overlayBlock').style.display = 'none';
        const drp = document.getElementById("templateDropdown"); // Dropdown element
        const templates = document.querySelectorAll(".template-item"); // Template image containers

        // Function to update the displayed image based on the selected dropdown value
        function updateTemplateImages() {
            const selectedValue = drp.value; // Get selected dropdown value

            templates.forEach(item => {
                item.style.display = item.getAttribute("data-value") === selectedValue ? "block" : "none";
            });
        }

        // Attach change event listener to the dropdown
        drp.addEventListener("change", updateTemplateImages);

        // Initialize the display based on the default selected value
        updateTemplateImages();
    }
</script>


