<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dropdown = document.getElementById("templateDropdown"); // Dropdown element
        const templateItems = document.querySelectorAll(".template-item"); // Template image containers

        // Function to update the displayed image based on the selected dropdown value
        function updateTemplateImages() {
            const selectedValue = dropdown.value; // Get selected dropdown value

            templateItems.forEach(item => {
                item.style.display = item.getAttribute("data-value") === selectedValue ? "block" : "none";
            });
        }

        // Attach change event listener to the dropdown
        dropdown.addEventListener("change", updateTemplateImages);

        // Initialize the display based on the default selected value
        updateTemplateImages();
    });



</script>

