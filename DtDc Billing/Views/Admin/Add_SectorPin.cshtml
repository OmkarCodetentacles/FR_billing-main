@model  IEnumerable<DtDc_Billing.Entity_FR.Sector>
@using (Ajax.BeginForm("Add_SectorPin", "Admin", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp1" }))
{




    


    <div class="" style="padding: 0px 16px">
        <div class="col-sm-12 no-padding">
            <div class="box box-info" style="border: 1px solid #dbdbdb !important;background:white ">
                <div class="box-header with-border" style="background:none; border:none">
                    <h4 class="box-title">Add Sector</h4>
                </div>
                <div class="sector">
                    <div class="mt-15">
                        <div class="col-md-2">
                            <input type="submit" value="Add Sector" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @Html.ValidationMessage("PinError")
                        @{
                            if (ViewBag.Message != null)
                            {
                                <div class="alert alert-danger" style="width:400px;color:red">
                                                            <strong style="color:red"> @ViewBag.Message <button type="button" class="close" data-dismiss="alert">×</button> </strong>
                                </div>
                            }
                        }
                        @{
                            var successMessage = TempData["Success"] as string;
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
                        }

                        <div class="form-horizontal">
                            <div class="" style="padding:0 20px;background:none">
                                <table id="add-sector-pin" class="table table-responsive table-bordered" style="display:inline-table !important; width:100%; text-align:center;">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Sector_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Pincode_values)
                                            </th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    <label>@Html.DisplayFor(modelItem => item.Sector_Name)</label>
                                                </td>
                                                <td>
                                                    <label style="width:100%">
                                                        @Html.TextAreaFor(modelItem => item.Pincode_values, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                                    </label>

                                                </td>
                                                @Html.HiddenFor(modelItem => item.Sector_Id)

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="mt-15">
                                    <input type="hidden" name="pfcode" value="@ViewBag.pfcode" />

                                    <div class="col-md-12" style="text-align: right;">
                                        <div class="form-group">
                                            <div class="">
                                                <input type="submit" value="Save" class="btn btn-success pull-right" id="scrolltotop"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}






