@model DtDc_Billing.CustomModel.ContactUsModel



    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="section-heading">
                    <h2> <em>Contact</em>  <span>US</span></h2>
                    <div id="map">
                        <iframe src="https://maps.google.com/maps?q=Av.+L%C3%BAcio+Costa,+Rio+de+Janeiro+-+RJ,+Brazil&t=&z=13&ie=UTF8&iwloc=&output=embed" width="100%" height="360px" frameborder="0" style="border:0" allowfullscreen=""></iframe>
                    </div>
                    <div class="info">
                        <span><i class="fa fa-phone"></i> <a href="javascript:void(0)" class="m-auto">8208668841</a></span>
                        <span><i class="fa fa-envelope"></i> <a href="javascript:void(0)" class="m-auto">frbillingsoftware@gmail.com</a></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 align-self-center">
                <div class="contactUSForm">

                    @using (Ajax.BeginForm("ContactUs", "Admin", null, new AjaxOptions
                    {
                         OnSuccess = "onSuccess",
                        UpdateTargetId = "contact",
                        OnBegin = "validateForm"
                    }, null))
                    {

                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset>
                                    @*<input type="text" name="name" id="name" placeholder="Name" autocomplete="on">*@
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter name" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    @*<input type="text" name="surname" id="surname" placeholder="Surname" autocomplete="on">*@
                                    @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter surname" } })
                                    @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    @*<input type="text" name="email" id="email" placeholder="Your Email">*@
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter email" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    @*<input type="text" name="website" id="website" placeholder="Your Website URL">*@
                                    @Html.EditorFor(model => model.website, new { htmlAttributes = new { @class = "form-control input-sm", @placeholder = "Enter message" } })
                                    @Html.ValidationMessageFor(model => model.website, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-button sub">
                                        Submit Request

                                    </button>
                                </fieldset>

                            </div>
                        </div>

                    }

                    @if (TempData["success"] != null)
                    {
                        <span class="text-success"> @TempData["success"]</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="contact-dec">
        <img src="~/assets/Home/assets/images/contact-dec.png" alt="">
    </div>
    <div class="contact-left-dec">
        <img src="~/assets/Home/assets/images/contact-left-dec.png" alt="">
    </div>


<script>
    function validateForm() {
        $('.sub').html(" <i class='fa fa-circle-o-notch fa-spin' style='font-size: 24px'></i>");
       
    }

    function onSuccess() {
        $("#name").val('');
        $("#surname").val('');
        $("#email").val('');
        $("#website").val('');
    }
</script>
