@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Session Expired</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Hide overflow to prevent scroll bars */
            color: #fff; /* Adjust text color for visibility on the background */
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: fill; /* Adjust the object-fit property */
            position: fixed;
            top: 0;
            left: 0;
            z-index: -1; /* Send the video to the background */
        }

        .overlay-content {
            text-align: center;
            color: black; /* Change text color */
            position: absolute;
            top: 90%;
            left: 50%;
            transform: translate(-30%, -30%);
            width: 90%;
        }

            .overlay-content p {
                padding-top: 50px;
                margin-top: 40px;
                font-size: 40px;
            }
    </style>
</head>
<body>

    <video autoplay loop muted>
        <source src="~/admin-lte/img/video/sessionout.mp4" type="video/mp4">
    </video>

    <div class="overlay-content">
        <p><strong>Your Session has expired. Please <a href="/Admin/AdminLogin" class="">Log In</a> again.</strong></p>
    </div>

</body>
</html>
