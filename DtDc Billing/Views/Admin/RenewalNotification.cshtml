@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Renewal Expired</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        text-align: center;
        padding: 20px;
        margin: 0;
        min-height: 58pc;
        display: grid;
        align-items: center;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 29pc;
        background: #eaeaea;
        border-radius: 12px;
    }


    h1 {
        color: #e74c3c;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    img {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
        border-radius: 8px;
        transition: transform 0.3s ease-in-out;
    }

        img:hover {
            transform: scale(1.1);
        }

    p {
        font-size: 16px;
    }

    .button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-decoration: none;
        background-color: #3498db;
        color: #fff;
        border-radius: 4px;
        transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

        .button:hover {
            background-color: #2980b9;
            transform: scale(1.05);
        }

    .main-red-button-hover a {
        display: inline-block;
        background-color: #05844f;
        font-size: 15px;
        font-weight: 400;
        color: #fff;
        text-transform: capitalize;
        padding: 12px 25px;
        border-radius: 23px;
        letter-spacing: 0.25px;
        transition: all .3s;
        text-decoration: none;
    }

        .main-red-button-hover a:hover {
            background-color: #03a4ed !important;
        }
</style>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="/assets/images/renewalexpired-ezgif.com-crop.gif" alt="Expired Image">
                </div>
                <div class="col-md-8 text-start">
                    <h1><i class="fas fa-truck-broken"></i> Renewal Expired</h1>
                    <p>Your subscription or membership renewal has expired. Please renew to continue enjoying our services.</p>
                    <p>Contact our support team for assistance.</p>
                    <p>Thank you!</p>
                    <div class="main-red-button-hover"><a href="#">Renew Now</a></div>
                </div>
            </div>


        </div>
    </div>
</body>

</html>

