@model IEnumerable<DtDc_Billing.Models.NewRegisterUser>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Users</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/ratemaster.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <!-- View New Register Users -->
        <section class="section">
            <div class="row">
                <!-- Table for Unpaid Users -->
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h4 class="text-primary">Users register but not paid</h4>
                        </div>
                        <div class="box-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <!-- Table Header -->
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>Remark</th>
                                            <th>Update Remark</th>
                                            <th>Pfcode</th>
                                            <th>Franchise Name</th>
                                            <th>Email</th>
                                            <th>Mobile No</th>
                                            <th>Registration Date</th>
                                            <th>Days Since Registration</th>
                                            <th>User Name</th>
                                            <th>Password</th>
                                        </tr>
                                    </thead>
                                    <!-- Table Body -->
                                    <tbody>
                                        @{
                                            int srno = 1;
                                            foreach (var item in Model.Where(x => x.isPaid != true))
                                            {
                                                <tr>
                                                    <td>@srno</td>
                                                    <td>@item.Remark</td>
                                                    <td>
                                                        @using (Html.BeginForm("UpdateRemark", "Admin"))
                                                        {
                                                            <input type="hidden" value="@item.registrationId" name="registrationId">
                                                            <textarea name="remark" class="form-control" id="remark" style="height: 50px;width: 140px;"></textarea>
                                                            <input type="submit" class="btn btn-primary">
                                                        }
                                                    </td>
                                                    <td>@item.Pfcode</td>
                                                    <td>@item.franchiseName</td>
                                                    <td>@item.emailId</td>
                                                    <td>@item.mobileNo</td>
                                                    <td>@item.dateTime</td>
                                                    <td>@item.DaysSinceRegistration</td>
                                                    <td>@item.userName</td>
                                                    <td>@item.password</td>
                                                </tr>
                                                srno++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Subscription Expire Clients -->
        <section class="section">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h4 class="text-primary">Subscription expireing</h4>
                        </div>
                        <div class="box-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>Remark</th>
                                            <th>Update Remark</th>
                                            <th>Pfcode</th>
                                            <th>Franchise Name</th>
                                            <th>Mobile No</th>
                                            <th>Payment Date</th>
                                            <th>Expire Date</th>
                                            <th>Expired Days</th>
                                            <th style="width:400px">Activate User</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int srno1 = 1;
                                            foreach (var item in Model.Where(x => x.ExpiredDays <= 10).OrderBy(x => x.ExpiredDays))
                                            {
                                                if (item.ExpireDate != null)
                                                {
                                                    <tr>
                                                        <td>@srno1</td>
                                                        <td>@item.Remark</td>
                                                        <td>
                                                            @using (Html.BeginForm("UpdateRemark", "Admin"))
                                                            {
                                                                <input type="hidden" value="@item.registrationId" name="registrationId">
                                                                <textarea name="remark" class="form-control" id="remark" style="height: 50px;width: 140px;"></textarea>
                                                                <input type="submit" class="btn btn-primary">
                                                            }
                                                        </td>
                                                        <td>@item.Pfcode</td>
                                                        <td>@item.franchiseName</td>
                                                        <td>@item.mobileNo</td>
                                                        <td>@item.dateTime</td>
                                                        @if (item.ExpiredDays <= 0)
                                                        {
                                                            <td style="color:red">@item.ExpireDate</td>
                                                        }
                                                        else
                                                        {
                                                            <td>@item.ExpireDate</td>
                                                        }
                                                        <td>
                                                            <strong>
                                                                @if (item.ExpiredDays <= 0)
                                                                {
                                                                    <span class="text-danger">@item.ExpiredDays</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="text-info">@item.ExpiredDays</span>
                                                                }
                                                            </strong>
                                                        </td>
                                                        <td>
                                                            <label for="pid">Payment Subscription</label>
                                                            @Html.DropDownList("pid", new SelectListItem[] {
                                                               new SelectListItem() {Text = "Select Subscription", Value=""},
                                                               new SelectListItem() {Text = "1 Month", Value="1"},
                                                               new SelectListItem() {Text = "1 Year", Value="2"},
                                                            }, new { @class = "form-control", id = "pid" })
                                                            <a href="#" class="btn btn-success" onclick="renewSubscription('@item.Pfcode')">Renew</a>
                                                        </td>
                                                    </tr>
                                                    srno1++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>


    <!-- Your custom scripts -->
    <script>
        function renewSubscription(pfcode) {
            var selectedValue = document.getElementById('pid').value;

            if (selectedValue == "" || selectedValue == null) {
                alert("Select Payment Subscription");
                return false;
            } else {
                var url = '/Admin/RenewSubcriptionExpClient?Pfcode=' + pfcode + '&pid=' + selectedValue;
                window.location.href = url;
            }
        }
    </script>

    <!-- Initialize DataTables -->
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
</body>
</html>
