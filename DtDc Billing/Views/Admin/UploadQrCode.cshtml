<script src="jquery-3.6.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>


<script>

    $(document).ready(function () {

        $("#fileErrorLogo").hide();
        $("#fileErrorStamp").hide();
        $("#fileErrorQRcode").hide();

        $('#submitBtnLogo').on('click', function (e) {

            // Get the file input value
            var file = $("#LogoFile").val();

            // Check if file input is empty
            if (file == "" || file == NaN || file == null) {
                $("#fileErrorLogo").show();
                return false;           
            }

            // Extract the file extension
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;

            // Validate file extension
            if (!allowedExtensions.exec(file)) {
                $("#fileErrorLogo").text("Invalid file type. Please upload a .png, .jpg, or .jpeg file").show();
                return false;
            }


        });


        $('#submitBtnStamp').on('click', function (e) {

            // Get the file input value
            var file = $("#StampFile").val();

            // Check if file input is empty
            if (file == "" || file == NaN || file == null) {
                $("#fileErrorStamp").show();
                return false;           
            }

            // Extract the file extension
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;

            // Validate file extension
            if (!allowedExtensions.exec(file)) {
                $("#fileErrorStamp").text("Invalid file type. Please upload a .png, .jpg, or .jpeg file").show();
                return false;
            }
        });

        $('#submitBtnQRcode').on('click', function (e) {

            // Get the file input value
            var file = $("#QrFile").val();

            // Check if file input is empty
            if (file == "" || file == NaN || file == null) {
                $("#fileErrorQRcode").show();
                return false;           
            }
            // Extract the file extension
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;

            // Validate file extension
            if (!allowedExtensions.exec(file)) {
                $("#fileErrorQRcode").text("Invalid file type. Please upload a .png, .jpg, or .jpeg file").show();
                return false;
            }
        });
    })
</script>
