</style>


@using (Html.BeginForm("AddLogo", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "fromQrCode" }))
{
    @Html.AntiForgeryToken()

    <section>
        <form enctype="multipart/form-data">

            <div class="" style="padding: 0px 15px">
                <div class="box box-info" style="background: none;  border: 1px solid #dbdbdb !important;background:white">
                    <div class="box-header with-border" style="background:none;border:none">
                        <small>  Note : It will appear on invoice & Image must be .png or .jpg or .jpeg format</small>

                    </div>
                    <div class="" style="padding:0 20px">
                        <div class="row">
                            <div class="col-md-12 ">

                                <div class="form-horizontal">
                                    <div class="box-body">

                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Upload Logo</label>
                                            <div class="col-md-5">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <input type="file" name="LogoFile" id="LogoFile" class="form-control" />
                                                        <span id="fileErrorLogo" style="color: red; display: none;">Please select a file before uploading.</span> <!-- Error message -->

                                                    </div>
                                                    <div class="col-md-5">
                                                        @if (ViewBag.logoimg != null)
                                                        {
                                                            <img src="@ViewBag.logoimg" style="height:100px;width:100px" />

                                                        }
                                                        else
                                                        {
                                                            <span>Image not Uploaded</span>
                                                        }
                                                    </div>
                                                    <div class="col-md-1 col-sm-12" style="margin-top:20px">
                                                        <input type="submit" value="Add" id="submitBtnLogo" class="btn btn-primary" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>

        </form>

    </section>

}



