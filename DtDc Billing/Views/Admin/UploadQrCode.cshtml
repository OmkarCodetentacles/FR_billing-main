<script>

    $(document).ready(function () {

        $("#fileError").hide();
        $('#submitBtnqr').on('click', function (e) {


            // Get the file input value
            var file = $("#qrfile").val();

            // Check if file input is empty
            if (file == "" || file == NaN || file == null) {
                $("#fileErrorqr").show();
                return false;            // Sto
            }

           


        });
    })
</script>
