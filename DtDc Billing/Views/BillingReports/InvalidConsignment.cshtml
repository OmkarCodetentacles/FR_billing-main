@model IEnumerable<DtDc_Billing.Entity_FR.Transaction>

@{
    ViewBag.Title = "Destinations";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>

<div class="content-wrapper">


    <div class="row">
        <div class="col-xs-12">
            <div class="box box-info" style="padding: 16px 16px !important">
                <div class="box-header with-border">
                    <h4> Invalid Consignment</h4>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="table_display_block" class="table table-striped table-bordered table-responsive height-450">
                        <thead>
                            <tr>
                                <th>
                                    Sr No
                                </th>
                                <th>
                                    Consignment no
                                </th>
                                <th>
                                    Customer Id
                                </th>
                                <th>
                                    Weight
                                </th>

                                <th>
                                    Pincode
                                </th>
                                <th>
                                    Mode
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Booking Date
                                </th>
                                <th>
                                    Insurance
                                </th>
                                <th>
                                    Claim amount
                                </th>
                                <th>
                                    Percentage
                                </th>
                                <th>
                                    Risk surcharge
                                </th>
                                <th>
                                    Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Consignment_no)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer_Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.chargable_weight)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pincode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Mode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                        <td>
                                            @item.booking_date.Value.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Insurance)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Claimamount)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Percentage)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Risksurcharge)
                                        </td>
                                        <td>
                                            @(item.Amount + (item.Risksurcharge ?? 0))
                                        </td>

                                    </tr>

                                    i++;
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

<script>
    $(function () {
        $('#table_display_block').dataTable({
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false
        });
    });
</script>
