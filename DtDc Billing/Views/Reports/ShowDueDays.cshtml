@model IEnumerable<DtDc_Billing.Models.DueDaysModel>
@{
    ViewBag.Title = "ShowDueDays";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<link href="~/admin-lte/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/admin-lte/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>



<div class="content-wrapper">
    <section class="conatiner">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info" style="padding: 16px 16px !important">
                    <div class="box-header with-border">
                        <h4>Show DueDays of the Customer</h4>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        @using (Html.BeginForm())
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="row">

                                                <div class="col-sm-12">

                                                    @if (ViewBag.fromdate != null)
                                                    {
                                                        <div class="col-md-4">
                                                            <input name="fromdatetime" class="form-control" id="datepicker" value="@ViewBag.fromdate" placeholder="from date" type="text">
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-md-4">

                                                            <input name="fromdatetime" class="form-control" id="datepicker" value="@ViewBag.todaydate.tostring("dd-mm-yyyy")" placeholder="from date" type="text">
                                                        </div>
                                                    }

                                                    @if (ViewBag.todate != null)
                                                    {
                                                        <div class="col-md-4">

                                                            <input style="margin-right:50px" value="@ViewBag.todate" name="todatetime" class="form-control" placeholder="to date" id="datepicker1" type="text">
                                                        </div>
                                                    }

                                                    else
                                                    {
                                                        <div class="col-md-4">

                                                            <input style="margin-right:50px" name="todatetime" value="@ViewBag.todaydate.tostring("dd-mm-yyyy")" class="form-control" placeholder="to date" id="datepicker1" type="text">
                                                        </div>
                                                    }
                                                    <div class="col-md-2">
                                                        <div class="form-group">
                                                            <button type="submit" class="btn btn-block btn-primary sbmt">search</button>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-2">
                                                        <div class="form-group">
                                                            <input type="submit" value="Export to Excel" name="submit" class="btn btn-block btn-success sbmt" />
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }

                        <div class="row">
                            <div class="col-sm-6">
                                <table id="ShowDueData" class="table table-striped table-bordered table-scroll">
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Company_Id)*@Customer Id

                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.InvoiceNo)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Date)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DueDays)
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{ int i = 1;
                                        }
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.Company_Id</td>
                                                    <td>@item.InvoiceNo</td>
                                                    <td>@item.Date.Value.ToString("dd-MM-yyyy")</td>
                                                    <td>
                                                        @if (item.DueDays > 0 && item.DueDays < 5)
                                                        {
                                                            <span style="color:orange">@item.DueDays</span>
                                                        }
                                                        else if (item.DueDays < 0)
                                                        {
                                                            <span style="color:red">Expired</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@item.DueDays</span>
                                                        }


                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                  
                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </section>
</div>

<style>
</style>

<script>
    $(function () {
        $('#ShowDueData').dataTable({
            "bPaginate": false,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": false,
            "bAutoWidth": false

        });
    });
</script>



<script>
    $('#datepicker').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })

    $('#datepicker1').datepicker({
        autoclose: true,
        format: 'dd-mm-yyyy'
    })
    $('.sidebar-menu li a').click(function () {
        $('li a').removeClass("active");
        $(this).addClass("active");
    });



</script>



<script>
    $(document).ready(function () {
        $('.sbmt').click(function () {
            var frmdate = $('#datepicker').val();

            var todate = $('#datepicker1').val();

            if (frmdate == "") {
                alert("Please Enter Start Date");
                return false;
            }
            else if (todate == "") {
                alert("Please Enter End Date");
                return false;
            }
            else {
                return true;
            }

        });


        $('#datepicker').datepicker({
            autoclose: true,
            format: 'dd-mm-yyyy'
        })

        $('#datepicker1').datepicker({
            autoclose: true,
            format: 'dd-mm-yyyy'
        })

    });
</script>
