
@model IEnumerable<DtDc_Billing.Models.Top5data>


<div class="col-md-12" style="margin-top:30px">
    <div class="box box-info" style=" width: 98%; ">
        <div class="box-header with-border">
          
            <p><strong style="color: #0049af; font-size: 18px;">Last 3 Months’ Best 5 Customers</strong> </p>

          
        </div>
        <!-- /.box-header -->
        <div class="box-body box-body-collapsed">
            <div class="table-responsive">
                <table id="table_display_block" class="table no-margin tbltop5data height-450">
                    <thead>
                        <tr>
                            <th>Sr.No</th>
                            <th style="text-align:center">Customer Id</th>

                            <th style="text-align:center">Net Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    @item.customerId
                                          
                                </td>
                                <td>@(item.NetAmount != null ? Math.Round((double)item.NetAmount):0)</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>

    </div>
</div>

