
@model IEnumerable<DtDc_Billing.Models.Top5data>


<div class="col-md-6" style="margin-top:30px">
    <div class="box box-info box-collapsed collapsed-box" style=" width: 98%; ">
        <div class="box-header box-header-collapsed with-border">
            @*<h3 class="box-title">Favorable Destinations</h3>*@
            <p><strong style="color: #0049af; font-size: 20px;">Last Thress Months Top 5 Customers</strong> </p>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-plus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body box-body-collapsed">
            <div class="table-responsive">
                <table id="table_display_block" class="table no-margin tbltop5data height-450">
                    <thead>
                        <tr>
                            <th>Sr.No</th>
                            <th style="text-align:center">Customer Id</th>

                            <th style="text-align:center">NetAmount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    @item.customerId
                                          
                                </td>
                                <td>@Math.Round((double)item.NetAmount)</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>

    </div>
</div>

