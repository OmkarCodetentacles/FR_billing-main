@{
    ViewBag.Title = "Printreceipt";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info" style="padding: 16px 15px">
                    <div class="box-header with-border">
                        <h3 class="box-title">Print Bulk Barcode</h3>
                    </div>


                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">
                            @if (TempData["error"] != null)
                            {
                                <div class="alert alert-danger">
                                    <strong>Error!</strong> @TempData["error"]
                                </div>
                            }
                            <div class="form-group">
                                @using (Html.BeginForm("BulkBarcodePrint", "stationery", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="col-md-6">
                                        @*<label for="file"><strong id="up-txt"> Upload Excel </strong></label>*@
                                        <input type="file" name="httpPostedFileBase" id="file" class="form-control" />
                                        <span id="fileErrorLogo" style="color: red; display: none;">Please select a file before uploading.</span> <!-- Error message -->

                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-3" style=" margin-top: 28px; ">
                                            <input type="submit" value="Upload" id="submitBtn" class="btn btn-primary" style="width:100%" />

                                        </div>
                                        <div class="col-md-3" style=" margin-top: 28px; ">
                                            <a href="https://frbilling.com/excelformat/BarcodeFormat.xlsx"  class="btn btn-success btn-block  col-sm-12 "> Export Excel</a>

                                        </div>

                                        </div>

                                        }
                                    </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
