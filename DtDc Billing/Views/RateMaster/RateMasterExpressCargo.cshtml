@model IEnumerable<DtDc_Billing.Entity_FR.express_cargo>
<section>
    <div class="">
        <a href="https://www.youtube.com/watch?v=yDjg5VFMPNc&list=PLT-Gd9X3Y1afr1FZRb8Z8ELFncnWwOhzz&index=12"
           target="_blank"
           data-placement="left"
           data-toggle="tooltip"
           class="pull-right" style="padding-right:30px"
           title="Click to view more info">
            <i class="fa fa-info-circle" style="font-size:25px;"></i>
        </a>
        @{
            var successMessage = ViewBag.Message as string;
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
        }
        @using (Ajax.BeginForm("RatemasterCargo", "RateMaster", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp5" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-sm-12 text-center">
                <h4 style="opacity:0;">PTP</h4>
            </div>
            <input type="hidden" value="@ViewBag.companyid" name="comppid">


            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Sector.Sector_Name)
                        </th>
                        <th>
                            UpTo(50)
                            @*  @Html.DisplayNameFor(model => model.Exslab1)*@
                        </th>
                        <th>
                            Above(50)
                            @*   @Html.DisplayNameFor(model => model.Exslab2)*@
                        </th>

                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sector.Sector_Name)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => item.Exslab1)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => item.Exslab2)
                        </td>
                        <td class="hidden">
                            @Html.HiddenFor(modelItem => item.Exp_Id)
                        </td>
                        <td class="hidden">
                            @Html.HiddenFor(modelItem => item.Sector_Id)
                        </td>
                    </tr>
                }

            </table>
            <input style="float:right" type="submit" class="btn btn-primary" name="submit" value="Save" id="submitBtn" />
        }
    </div>
</section>
