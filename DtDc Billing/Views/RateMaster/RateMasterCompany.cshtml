                                   </div>
                               </div>
                           </div>
                       </div>
                       <div class="form-group">
                           <div class="col-md-7">
                               <div class="row">
                                   <div class="col-md-3">
                                       <label class="">Phone Number<span style="color:red">*</span></label>
                                   </div>
                                   <div class="col-md-9">
                                       @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control input-sm", @required = "required" , pattern = "^[0-9]{10}$" } })
                                       @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                   </div>
                               </div>
                           </div>
                       </div>
                       <div class="form-group">
                           <div class="col-md-7">
                               <div class="row">
                                   <div class="col-md-3">
                                       <label class="">Email<span style="color:red">*</span></label>
                                   </div>
                                   <div class="col-md-9">
