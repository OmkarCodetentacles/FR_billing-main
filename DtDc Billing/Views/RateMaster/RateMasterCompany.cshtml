                               <div class="row">
                                   <div class="col-md-3">
                                       <label class="">N</label>
                                   </div>
                                   <div class="col-md-9">
                                       @Html.EditorFor(model => model.N_Docket, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                       @Html.ValidationMessageFor(model => model.N_Docket, "", new { @class = "text-danger" })
