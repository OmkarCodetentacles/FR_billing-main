                                   <div class="col-md-3">
                                       <label class="">Company Id<span style="color:red">*</span></label>
                                   </div>
                                   <div class="col-md-9">
                                       @Html.EditorFor(model => model.Company_Id, new { htmlAttributes = new { @class = "form-control input-sm", @required = "required" } })
