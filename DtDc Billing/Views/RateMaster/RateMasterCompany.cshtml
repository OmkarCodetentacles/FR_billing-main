                                       <label class="">Company Name<span style="color:red">*</span></label>
                                   </div>
                                   <div class="col-md-9">
                                       @Html.EditorFor(model => model.Company_Name, new { htmlAttributes = new { @class = "form-control input-sm", @required = "required" } })
                                       @Html.ValidationMessageFor(model => model.Company_Name, "", new { @class = "text-danger" })
