                               </div>
                           </div>
                       </div>
                       <div class="form-group">
                           <div class="col-md-7">
                               <div class="row">
                                   <div class="col-md-3">
                                       <label class="">G</label>
                                   </div>
                                   <div class="col-md-9">
                                       @Html.EditorFor(model => model.G_Docket, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                       @Html.ValidationMessageFor(model => model.G_Docket, "", new { @class = "text-danger" })
