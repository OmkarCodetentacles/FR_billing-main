
@{
    ViewBag.Title = "AddCompanyimporFromExcel";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority +
           Request.ApplicationPath.TrimEnd('/');
}


<div class="content-wrapper">
    <div class="box box-info" style="padding: 16px 16px !important">

        <div class="box-header with-border">
            <h4>
                Import Company From Excel
               
            </h4>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">

                    @{
                        var successMessage = TempData["Upload"] as string;
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
                    }
                    <div class="form-horizontal">
                        <div class="box-body">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @using (Html.BeginForm("AddCompanyimporFromExcel", "RateMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <div class="col-md-8 no-padding">
                                                <label for="file"><strong id="up-txt"> Upload Companies </strong></label>
                                                <input type="file" name="httpPostedFileBase" id="file" class="form-control" />
                                                <div style="display:flex; gap:10px;justify-content:end;margin-top:10px">
                                                    <input type="submit" value="Upload" class="btn btn-primary" id="submitBtn" />
                                                    <a href="@baseUrl/excelformat/UploadCompany.xlsx" class="btn btn-success"> Export Excel</a><!--CREAte Dynamic http://frbilling.com-->
                                                </div>
                                            </div>


                                        }
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>




                </div>
            </div>
        </div>
    </div>

</div>




