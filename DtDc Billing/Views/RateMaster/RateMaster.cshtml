</script>
<script>

    $(document).ready(function () {

        $('#only').val(2);

        $("input[name$='Slabrad']").change(function () {

            var test = $(this).val();

            //alert(test);

            if (test == 3) {
                $('#Slab3').hide();
                $('#Slab2').show();

                $('#only').val(test);
            }
            else if (test == 4) {
                $('#Slab3').show();
                $('#Slab2').show();
                $('#only').val(test);
            }
            else if (test == 2) {
                $('#Slab3').hide();
                $('#Slab2').hide();
                $('#only').val(2);

            }

        });
    });
</script>



