
@model IEnumerable<DtDc_Billing.Entity_FR.Dtdc_Ptp>
<style>
    #dtdc_ptp thead tr th , #dtdc_ptp tbody tr td{
        width: 14%;
    }
    #dtdc_ptp thead tr th {
        width: 14%;
    }
</style>

    <section  style="padding: 20px; border: 1px solid #dddddd;">
        <div class="">
            @{
                var successMessage = ViewBag.Message as string;
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
            }
            @using (Ajax.BeginForm("RateMasterPtp", "RateMaster", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp4", OnSuccess = "scrollToTop()" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="hidden" value="@ViewBag.companyid" name="comppid">

                <div class="col-sm-12 text-center">
                    <h4>PTP</h4>
                </div>

                <table class="table table-bordered table-striped" id="dtdc_ptp">
                    <thead>
                        <tr class="upto-input">
                            <th>
                                @*<h4>@Html.DisplayNameFor(model => model.dest)</h4>*@
                            </th>
                            <th>
                                <label>Upto 500gm</label>
                            </th>
                            <th>
                                <label>Add 500gm</label>
                            </th>
                            <th>
                                <label>10 To 25kg</label>
                            </th>
                            <th>
                                <label>25 To 50kg </label>
                            </th>
                            <th>
                                <label>50 To 100kg</label>
                            </th>
                            <th>
                                <label>Add 100kg</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="sectors">
                                    @Html.DisplayFor(modelItem => item.dest)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.PUpto500gm)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.PAdd500gm)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.PU10to25kg)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.PU25to50)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.PU50to100)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.Padd100kg)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="col-sm-12 text-center">
                    <h4>PTP 2</h4>
                </div>

                <table class="table table-bordered table-striped" id="dtdc_ptp">
                    <thead>
                        <tr class="upto-input">
                            <th>
                                @*<h4>@Html.DisplayNameFor(model => model.dest)</h4>*@
                            </th>
                            <th>
                                <label>Upto 500gm</label>
                            </th>
                            <th>
                                <label>Add 500gm</label>
                            </th>
                            <th>
                                <label>10 To25kg</label>
                            </th>
                            <th>
                                <label>25 To 50kg</label>
                            </th>
                            <th>
                                <label>50 To 100kg</label>
                            </th>
                            <th>
                                <label>Add 100kg</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="sectors">
                                    @Html.DisplayFor(modelItem => item.dest)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.P2Upto500gm)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.P2Add500gm)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.P2U10to25kg)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.P2U25to50)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.P2U50to100)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.P2add100kg)
                                </td>
                                <td class="hidden">
                                    @Html.HiddenFor(modelItem => item.Company_id)
                                </td>
                                <td class="hidden">
                                    @Html.HiddenFor(modelItem => item.ptp_id)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>



                @*<input class="btn btn-primary pull-right" type="submit" name="submit" value="Save" id="submitBtn" />*@
                <div class="row" >
                    <div class="col-md-12" >
                        <input class="btn btn-primary pull-right" type="submit" name="submit" value="Save" id="submitBtn"  onclick="scrollToTop()" />
                    </div>
                </div>
                
            }
        </div>
    </section>
    <script>
        function scrollToTop() {
            window.scrollTo(0, 0);
        }
        $(document).ready(function () {
            
            $('#submitBtn').on('click', function (e) {
                // Scroll to the top of the page
                scrollToTop();
              
                // Get the form element
                var form = $('#frmEmp');
                // Submit the form
                form.submit();

              

                $('form').submit();
            });
        });
</script>

