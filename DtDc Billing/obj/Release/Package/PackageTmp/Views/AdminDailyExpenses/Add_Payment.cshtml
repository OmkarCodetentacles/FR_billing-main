<script>
    $(document).ready(function () {



        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetAllCreditReport")',
            data: { },
            dataType: 'json',
            success: function (data) {
                var sum = 0;
    var rows;
                $.each(data, function (i, item) {
                    var timestamp = parseInt(item.Datetime_Cons.match(/\d+/)[0]);
                    var date = new Date(timestamp);

                    // Format date as dd/MM/yyyy
                    var formattedDate = date.toLocaleDateString('en-GB', {
                        day: '2-digit',
                        month: '2-digit',
                        year: 'numeric'
                    });

        rows += "<tr>"
            + "<td>" + item.Consignment_No + "</td>"
            + "<td>" + formattedDate + "</td>"
            + "<td>" + item.Destination + "</td>"
            + "<td>" + item.sender_phone + "</td>"
            + "<td>" + item.Sender + "</td>"
            + "<td>" + item.ReciepentsPincode + "</td>"
            + "<td>" + item.Charges_Total + "</td>"
            + "<td><span style='color: green; font-weight: bold;'>" + item.Paid_Amount + "</span></td>"
            + "<td><span style='color: red; font-weight: bold;'>" + (item.Charges_Total - item.Paid_Amount) + "</span></td>"

            + "</tr>";
        sum += (item.Charges_Total - item.Paid_Amount);
    });
                $('#example1 tbody').append(rows);
                $('#totalamt').val(sum);
    $('#example1').dataTable({
        "bPaginate": true,
        "bLengthChange": true,
        "bFilter": true,
        "bSort": true,
        "bInfo": true,
        "bAutoWidth": false
    });

 },
            error: function (emp) {
                alert('error');
            }
        });

    });


    $('#Datetime_PayString').datepicker({
        autoclose: true,
        format: 'dd/mm/yyyy'

    })
</script>



