<div class="content-wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Main content -->
        <div class="box box-info" style="padding: 16px 16px !important">
            <div class="box-header with-border">
                <h4 class="box-title">Add Payment</h4>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        @{
                            var successMessage = ViewBag.success as string;
                            var errorMessage = ViewBag.Error as string;
                        }

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            successMessage = "Payment Added SuccessFully";
                            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
                        }
                        
                        @if (!string.IsNullOrEmpty(errorMessage))
                         {
                            errorMessage = "Consignment number Does not Exists";
                            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("error", errorMessage))

                        }

                        <!-- /.box-header -->
                        <!-- form start -->
                        <div class="form-horizontal">

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-7" style="margin-bottom: 20px;">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="inputEmail3" class="">Consignment No<span class="Reqired">*</span></label>
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.Consignment_No, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Enter Consignment No" } })
                                                @Html.ValidationMessageFor(model => model.Consignment_No, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>
                                    @*<div class="col-md-7" style="margin-bottom: 20px;">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="inputEmail3" class="">Date<span class="Reqired">*</span></label>
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.Datetime_PayString, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Enter Date", Value = @ViewBag.date } })
                                                @Html.ValidationMessageFor(model => model.Datetime_PayString, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>*@
                                    <div class="col-md-7" style="margin-bottom: 20px;">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="inputEmail3" class="">Amount<span class="Reqired">*</span></label>
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Enter Amount" } })
                                                @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-6" style="margin-bottom: 20px;">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="inputEmail3" class="">Mode<span class="Reqired">*</span></label>
                                            </div>
                                            <div class="col-md-9">
                                                <label>
                                                    <input type="radio" name="ModeOfPayment" id="cash" value="cash" checked="">
                                                    Cash
                                                </label>


                                                <label>
                                                    <input type="radio" name="ModeOfPayment" id="credit" value="credit">
                                                    Credit
                                                </label>

                                                <label>
                                                    <input type="radio" name="ModeOfPayment" id="cheque" value="cheque">
                                                    Cheque
                                                </label>

                                                <label>
                                                    <input type="radio" name="ModeOfPayment" id="card" value="card">
                                                    Card
                                                </label>

                                                <label>
                                                    <input type="radio" name="ModeOfPayment" id="other" value="other">
                                                    Other
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7" style="margin-bottom: 20px;">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="inputPassword3" class="">Description<span class="Reqired">*</span></label>
                                            </div>
                                            <div class="col-md-9">
                                                @Html.TextAreaFor(model => model.Description_, new { htmlAttributes = new { @class = "form-control", placeholder = "Description", rows = "5" } })
                                                @Html.ValidationMessageFor(model => model.Description_, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                    </div>
                                    <div class="col-md-7">
                                        <div>

                                            <input type="submit" class="btn btn-primary pull-right btn-sm" value="Add" style="margin-top:10px" />
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <!-- /.box-body -->
                        <!-- /.box-footer -->
                    </div>
                </div>
            </div>
        </div>

    }
    <section class="content">
