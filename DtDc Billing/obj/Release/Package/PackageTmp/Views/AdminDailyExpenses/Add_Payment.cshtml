                            </thead>
                            <tbody>
                            </tbody>

                        </table>

                        <div class="box-footer">
                            <div class="col-md-4 col-md-offset-8">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn bg-primary total-label">Total Balance</button>
                                    </div>
                                    <!-- /btn-group -->
                                    <input type="text" class="form-control" id="totalamt" placeholder="Total Balance">
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- /.box-body -->
                    <!-- /.box-footer -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->
