@model DtDc_Billing.Metadata_Classes.TransactionMetadata


@{

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    label {
        display: inline-block;
        width: 100% !important;
        margin-right: 0.5em;
        padding-top: 1.5em;
    }

    .choosefile {
        padding: 7px !important;
    }
</style>

<div class="content-wrapper">
    <div class="box box-info" style="padding:16px 16px">
        @if (TempData["ErrorMessages"] != null)
        {
            var errorMessages = TempData["ErrorMessages"] as List<string>;
            if (errorMessages.Count() > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in errorMessages)
                        {
                            <li style="color:red;">@error</li>
                        }
                    </ul>
                </div>
            }
        }
        @{

            var Error = TempData["Error"] as string;
            var success = TempData["success"] as string;
        }

        @if (!string.IsNullOrEmpty(success))
        {
            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", success))
        }

        @if (!string.IsNullOrEmpty(Error))
        {


            @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("danger", Error))

        }


        @using (Html.BeginForm("ImportFrPlusExcelFile", "Booking", FormMethod.Post, new { enctype = "multipart/form-data", id = "excelform" }))
        {

            @Html.AntiForgeryToken()


            <div class="box-header with-border">
                <div class="row">
                    <div class="col-md-6">

                        <h4>
                            Book Consignment
                            <a href="https://www.youtube.com/watch?v=dxswR3vLNtw&list=PLT-Gd9X3Y1afr1FZRb8Z8ELFncnWwOhzz&index=15"
                               target="_blank"
                               data-toggle="tooltip"
                               title="Click to view more info">
                                <i class="fa fa-info-circle" style="font-size:25px;"></i>
                            </a>
                        </h4>
                    </div>


                    <div class="col-md-6">
                        <div class="col-sm-8">
                            <!--<input id="File1" required type="file" name="ImportText" class="choosefile" />
                        <span class="fileError" style="color: red; display: none;">Please select a file before uploading.</span>-->
                            <!-- Error message -->
                            <input id="ExcelFile" type="file" name="ImportExcelFile" />
                            <span class="excelfileError" style="color: red; display: none;">Please select a Excel file before uploading.</span>

                        </div>
                        <div class="col-sm-4">
                            <input type="submit" class="btn btn-success pull-right btn-submitt" id="excelsubmitBtn" value="Import From text" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <input type="text" id="intpincode" class="form-control" style="display:none" placeholder="International City" />
                    </div>
                </div>

            </div>

        }
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">


                    <div class="form-horizontal">

                        <div id="form-Cons">
                            @Html.Partial("ConsignmentPartial", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

