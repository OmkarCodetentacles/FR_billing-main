<script>
    var checkedConsignments = [];
        // Function to get checked consignment numbers
        function getCheckedConsignments() {
           
            // Loop through each row in the table
            $('#check-booking-list tbody tr').each(function () {
                // Find the checkbox within the current row
                var checkbox = $(this).find('td:eq(1) input[type="checkbox"]');
                // Check if the checkbox is checked
                if (checkbox.prop('checked')) {
                    // If checked, get the consignment number from the second column
                    var consignmentNumber = $(this).find('td:eq(2)').text().trim();
                    checkedConsignments.push(consignmentNumber);
                }
            });
            PasstheConsignmentsToRTO();
           
        }

    function PasstheConsignmentsToRTO() {
      
        var consignmentsString = checkedConsignments.join(',');
        $.ajax({
            type: 'GET',
            url: '/Booking/CovertConsignmentToRTO',
            data: { consignmnets: consignmentsString },
            dataType: 'json',
            success: function (data) {
             
                if (data === "Success") {
                    alert("Consignment Set for the RTO  successfully!!!");
                                  }
                else {
                    alert("Something Went Wrong")
                }
                window.location.href = "/Booking/Checkbookinglist?" +
                    "Fromdatetime=" + encodeURIComponent($("#datepicker").val()) +
                    "&ToDatetime=" + encodeURIComponent($("#datepicker1").val()) +
                    "&Custid=" + encodeURIComponent($("#custid").val());


            },
            error: function () {
                alert("Error occurred while processing the request.");
            }
        })
    }

</script>

