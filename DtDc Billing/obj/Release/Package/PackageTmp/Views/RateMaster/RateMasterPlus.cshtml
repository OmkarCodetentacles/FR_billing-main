
@model IEnumerable<DtDc_Billing.Entity_FR.dtdcPlu>

<style>
    #dtdc_plus thead tr th {
        width: 13%;
    }
</style>


@{
    var successMessage = ViewBag.Message as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
}

<section>
    <div class="" style="padding: 20px; border: 1px solid #dddddd;">
        <a href="https://www.youtube.com/watch?v=8Cfp8la6dsA&list=PLT-Gd9X3Y1afr1FZRb8Z8ELFncnWwOhzz&index=10"
           target="_blank"
           data-placement="left"
           data-toggle="tooltip"
           class="pull-right"
           title="Click to view more info">
            <i class="fa fa-info-circle" style="font-size:25px;"></i>
        </a>
        @using (Ajax.BeginForm("RateMasterplus", "RateMaster", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "frmEmp3", OnBegin = "onBegin", OnComplete = "onComplete" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <input type="hidden" value="@ViewBag.companyid" name="comppid">


            <div class="col-sm-12 text-center">
                <h4 style="opacity:0;">PTP</h4>
            </div>

            <table class="table table-bordered table-striped" id="dtdc_plus">
                <thead>
                    <tr class="upto-input">
                        <th>
                            @*<h4>@Html.DisplayNameFor(model => model.destination)</h4>*@
                        </th>
                        <th>
                            <label>@Html.DisplayNameFor(model => model.Upto500gm)</label>
                        </th>
                        <th>
                            <label>@Html.DisplayNameFor(model => model.Add500gm)</label>
                        </th>
                        <th>
                            <label>@Html.DisplayNameFor(model => model.U10to25kg)</label>
                        </th>
                        <th>
                            <label>@Html.DisplayNameFor(model => model.U25to50)</label>
                        </th>
                        <th>
                            <label>@Html.DisplayNameFor(model => model.U50to100)</label>
                        </th>
                        <th>
                            <label>@Html.DisplayNameFor(model => model.add100kg)</label>
                        </th>
                        @*<th>
                                <label>@Html.DisplayNameFor(model => model.go149)</label>
                            </th>
                            <th>
                                <label>@Html.DisplayNameFor(model => model.go99)</label>
                            </th>*@
                    </tr>
                </thead>
                <tbody>


                    @*<th>
                            @Html.DisplayNameFor(model => model.Company.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sector.Sector_Name)
                        </th>*@



                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="sectors">
                                @Html.DisplayFor(modelItem => item.destination)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.Upto500gm)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.Add500gm)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.U10to25kg)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.U25to50)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.U50to100)
                            </td>
                            <td>
                                @Html.EditorFor(modelItem => item.add100kg)
                            </td>
                            @*<td>
                                    @Html.EditorFor(modelItem => item.go149)
                                </td>
                                <td>
                                    @Html.EditorFor(modelItem => item.go99)
                                </td>*@

                            <td class="hidden">
                                @Html.HiddenFor(modelItem => item.Sector_Id)
                            </td>
                            <td class="hidden">
                                @Html.HiddenFor(modelItem => item.Company_id)
                            </td>
                            <td class="hidden">
                                @Html.HiddenFor(modelItem => item.plus_id)
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
            <div class="row">
                <div class="col-md-12">
                    <input class="btn btn-primary pull-right" type="submit" name="submit" value="Save" id="submitBtn" />
                </div>

            </div>
        }
    </div>
</section>
