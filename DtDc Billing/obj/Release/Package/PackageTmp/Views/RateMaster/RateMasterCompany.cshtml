<script>
    function validateForm() {

    }
    // Scroll to the top of the page
    function scrollToTop() {
        window.scrollTo(0, 0);
    }
     function showLoader() {
     var showLoader = '@TempData["ShowLoader"]';

     document.getElementById('overlayBlock').style.display = 'block';

 }
    $(document).ready(function () {
        $('#uploadBtn').on('click', function () {
            scrollToTop();
            var companyId = document.getElementById("Company_Id").value;
            var companyName = document.getElementById("Company_Name").value;
            var companyAddress = $("#Company_Address").val();
            var phone = $("#Phone").val();
            var Email = $("#Email").val();

            if (companyId.trim() === "" || companyName.trim() === "" || companyAddress.trim() === "" || phone.trim() === "" || Email.trim() === "") {
                alert("Please fill in all the required fields.");
                return false; // Prevent form submission
                
            }
            if (phone.length !== 10) {
                alert("Please enter a valid 10-digit phone number.");
                return false; // Prevent form submission
            }
                showLoader('overlayBlock');
                // Get the form element
                var form = $('#frmEmp');
            // Submit the form
            form.submit();

        });



    });


    function validatePhoneNumber(input) {
        input.value = input.value.replace(/[^0-9]/g, '').substring(0, 10);
        var phoneValidationMessage = document.getElementById("phoneValidationMessage");
        if (input.value.length === 10) {
            phoneValidationMessage.style.display = "none";
        } else {
            phoneValidationMessage.style.display = "block";
        }
    }



</script>
   
