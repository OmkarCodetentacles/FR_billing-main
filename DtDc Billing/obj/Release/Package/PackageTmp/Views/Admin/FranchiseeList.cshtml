
@{
    ViewBag.Title = "FranchiseeList";
    Html.EnableClientValidation(true);
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    #frmEmp, #menu2, #frmEmp1 {
        margin: 0px 0 !important;
        text-align: left;
    }

    .franchiess-edit {
        padding: 0 15px;
    }
</style>
<script>
    $(function () {
        alert("Hide")
        $("#success-alert").hide();
        $("#error-alert").hide();
    }
</script>
<section class="content-wrapper" style="background: rgb(245 245 245)">

    <div class="row">
        <div class="col-md-12 ">
            @{
                var successMessage = TempData["Success1"] as string;
                var errorMessage = TempData["Error"] as string;
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("success", successMessage))
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                @Html.Partial("~/Views/Shared/AlertPartial.cshtml", new Tuple<string, string>("danger", errorMessage))
            }
            @if (TempData["errormsg"] != null && TempData["errormsg"] != "")
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @TempData["errormsg"]
                </div>
            }
            <ul id="Tab" class="nav nav-tabs franchiess-edit">
                <li class="active"><a data-toggle="tab" href="#home">Edit Franchisee</a></li>
                <li><a data-toggle="tab" href="#menu1">Edit Sectors</a></li>
                <li><a data-toggle="tab" href="#menu2">Upload Stamp</a></li>
                <li><a data-toggle="tab" href="#menu3">Upload Logo</a></li>

            </ul>

            <div class="tab-content ">
                <div id="home" class="tab-pane fade in active">
                    <div id="frmEmp">

                        @{ Html.RenderPartial("Edit", (DtDc_Billing.Models.FranchiseeModel)ViewBag.Company);}
                    </div>

                </div>
                <div id="menu1" class="tab-pane fade">
                    <div id="frmEmp1234">
                        @{ Html.RenderPartial("Add_SectorPin", (IEnumerable<DtDc_Billing.Models.SectorNewModel>)ViewBag.Sectors);}

                    </div>
                </div>
                <div id="menu2" class="tab-pane fade">
                    <div id="upload">
                        @{ Html.RenderPartial("Upload_stamp");}

                    </div>
                </div>
                <div id="menu3" class="tab-pane fade">
                    <div id="upload">
                        @{ Html.RenderPartial("AddLogo");}

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@{
    if (ViewBag.activateTab == "2")
    {
        <script>
                                    $(document).ready(function () {
                    // Remove the "active" class from the first tab and its content
                    $("#Tab li:first-child").removeClass("active");
                    $("#home").removeClass("active in");

                    // Add the "active" class to the second tab and its content
                    $("#Tab li:nth-child(2)").addClass("active");

                    $("#menu1").addClass("active");
                    $("#menu1").addClass("active in");
                });
        </script>
    }
}


