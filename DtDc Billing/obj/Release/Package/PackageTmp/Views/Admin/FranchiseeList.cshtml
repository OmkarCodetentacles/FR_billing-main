        {
            <div class="alert alert-success d-flex justify-content-between align-items-center">
                <strong>Success!!</strong>@TempData["Success1"]
                <button type="button" class="close" data-dismiss="alert">X</button>
            </div>

        }*@
            <div class="tab-content ">
                <div id="home" class="tab-pane fade in active">
                    <div id="frmEmp">

                        @{ Html.RenderPartial("Edit", (DtDc_Billing.Models.FranchiseeModel)ViewBag.Company);}
                    </div>

                </div>
                <div id="menu1" class="tab-pane fade">
                    <div id="frmEmp1">
                        @{ Html.RenderPartial("Add_SectorPin", (IEnumerable<DtDc_Billing.Entity_FR.Sector>)ViewBag.Sectors);}

                    </div>
                </div>
                <div id="menu2" class="tab-pane fade">
                    <div id="upload">
                        @{ Html.RenderPartial("Upload_stamp");}

                    </div>
                </div>
                <div id="menu3" class="tab-pane fade">
                    <div id="upload">
                        @{ Html.RenderPartial("AddLogo");}

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>